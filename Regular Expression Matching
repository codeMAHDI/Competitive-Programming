class Solution {
  bool isMatch(String s, String p) {
    int m = s.length, n = p.length;

    List<List<bool>> dp = List.generate(
        m + 1, (_) => List.filled(n + 1, false));

    dp[0][0] = true;

    // Handle patterns like a*, a*b*, a*b*c*
    for (int j = 2; j <= n; j++) {
      if (p[j - 1] == '*') {
        dp[0][j] = dp[0][j - 2];
      }
    }

    for (int i = 1; i <= m; i++) {
      for (int j = 1; j <= n; j++) {
        // Normal match or '.'
        if (p[j - 1] == s[i - 1] || p[j - 1] == '.') {
          dp[i][j] = dp[i - 1][j - 1];
        }
        // Star case
        else if (p[j - 1] == '*') {
          // Ignore previous char + '*'
          dp[i][j] = dp[i][j - 2];

          // Use '*' if matches
          if (p[j - 2] == s[i - 1] || p[j - 2] == '.') {
            dp[i][j] = dp[i][j] || dp[i - 1][j];
          }
        }
      }
    }

    return dp[m][n];
  }
}
