class Solution {
  int reverse(int x) {
    int rev = 0;
    const int max = 2147483647;
    const int min = -2147483648;

    while (x != 0) {

      int digit = x.remainder(10);
      x = x ~/ 10; 


      if (rev > max ~/ 10 || (rev == max ~/ 10 && digit > 7)) return 0;
      if (rev < min ~/ 10 || (rev == min ~/ 10 && digit < -8)) return 0;

      rev = rev * 10 + digit;
    }
    return rev;
  }
}
